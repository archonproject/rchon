<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Edition</th>
    <th>Publication date</th>
    <th>Place of publication</th>
    <th>Publisher</th>
    <th>Series</th>
    <th>Copy edition</th>
    <th>Number of pages</th>
    <th>Description</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.edition %></td>
    <td><%= book.publication_date %></td>
    <td><%= book.place_of_publication %></td>
    <td><%= book.publisher %></td>
    <td><%= book.series %></td>
    <td><%= book.copy_edition %></td>
    <td><%= book.number_of_pages %></td>
    <td><%= book.description %></td>
    <td><%= book.notes %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

