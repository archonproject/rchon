<h1>Listing classifications</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Creator</th>
    <th>Classification identifier</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classifications.each do |classification| %>
  <tr>
    <td><%= classification.parent_id %></td>
    <td><%= classification.creator_id %></td>
    <td><%= classification.classification_identifier %></td>
    <td><%= classification.title %></td>
    <td><%= classification.description %></td>
    <td><%= link_to 'Show', classification %></td>
    <td><%= link_to 'Edit', edit_classification_path(classification) %></td>
    <td><%= link_to 'Destroy', classification, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

